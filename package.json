{
	"name": "stimulation-splitter",
	"version": "0.1.0",
	"description": "LiveSplit AutoSplitter for Stimulation Clicker",
	"author": "Mikarific",
	"license": "MIT",
	"repository": "git@github.com:Mikarific/StimulationClicker.git",
	"scripts": {
		"dev": "rollup -wc",
		"build:js": "rollup -c",
		"build": "run-s ci clean build:js",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint src/*.ts",
		"ci": "run-s lint",
		"clean": "del-cli dist"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3.2.0",
		"@eslint/js": "^9.15.0",
		"@gera2ld/plaid": "~2.7.0",
		"@gera2ld/plaid-rollup": "~2.7.0",
		"@typescript-eslint/eslint-plugin": "^8.15.0",
		"@typescript-eslint/parser": "^8.15.0",
		"del-cli": "^6.0.0",
		"eslint": "^9.15.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.2.1",
		"globals": "^15.12.0",
		"lint-staged": "^15.2.0",
		"prettier": "^3.3.3",
		"rollup-plugin-userscript": "^0.3.7",
		"typescript": "^5.6.3"
	},
	"dependencies": {},
	"lint-staged": {
		"src/**": [
			"eslint --fix",
			"prettier --write"
		]
	},
	"engines": {
		"node": ">=20"
	}
}
