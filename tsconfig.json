{
	"compilerOptions": {
		"target": "es6",
		"module": "es6",
		"moduleResolution": "node",
		"declaration": true,
		"emitDeclarationOnly": true,
		"outDir": "types/compiled",
		"allowSyntheticDefaultImports": true,
		"jsx": "react",
		"lib": ["DOM", "ES6", "DOM.Iterable", "ScriptHost", "ESNext"]
	},
	"include": ["src/**/*.ts"]
}
